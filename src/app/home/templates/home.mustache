{{>header}}

<main>
    <h1>BRP Controle</h1>
</main>
{{#error}}
<p class="notice">{{error}}</p>
{{/error}}
{{>footer}}
    <h1>Controleer persoonsgegevens</h1>
    <form action="/" method="POST">
      <input type="hidden" name="contact_id" value="{{contact_id}}" />
      <fieldset>
        <legend>Controleer op BSN</legend>
        <label>Wat is uw BSN</label>
        <input type="number" name="bsn" value="{{bsn}}" />
      </fieldset>
      <div class="actions">
        <input type="submit" value="Controleren" />
      </div>
    </form>
    <form action="/linkuser" method="POST">
      <h2>Controlegegevens</h2>
      <p>Zoek een persoon om controlegegevens weer te geven.</p>
      {{#controle_data }}
      <input type="hidden" name="bsn" value="{{bsn}}" />
      {{! hardcoded contact id until linking button is available }}
      <input type="hidden" name="contact_id" value="{{contact_id}}" />
      <dl>
        <dt>
          Geboortedatum
        </dt>
        <dd>
          {{birthday}}
        </dd>
        <dt>
          Achternaam
        </dt>
        <dd>
          {{lastname}}
        </dd>
        <dt>
          Woonplaats
        </dt>
        <dd>
          {{city}}
        </dd>
      </dl>
      {{/controle_data}}
      <div class="actions">
        <input type="submit" value="Koppelen aan afhandeling" />
        <a href="#">Terug zonder koppelen</a>
      </div>
    </form>